{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "node",
    "lib": [
      "ES2020",
      "DOM",
    ],
    "sourceMap": true,
    "strictNullChecks": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "declaration": true,
    "paths": {
      "tslib": [
        "/node_modules/tslib/tslib.d.ts"
      ],
      "@/*": [
        "./*"
      ]
    },
    "types": [
      "@types/wicg-file-system-access"
    ],
    "strict": true,
    "skipLibCheck": true,
  },
  "include": [
    "./**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "./assets/**/*.*"
  ]
}