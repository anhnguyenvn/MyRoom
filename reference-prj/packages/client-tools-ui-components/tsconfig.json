{
    "compilerOptions": {
        "outDir": "./dist/",
        "module": "ESNext",
        "target": "ES2020",
        "moduleResolution": "node",
        "lib": [
          "ES2020",
          "DOM",
        ],
        "sourceMap": true,
        "strictNullChecks": true,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "baseUrl": ".",
        "declaration": true,
        "strict": false,
        "skipLibCheck": true,
        "jsx": "react-jsx",
      },
      "include": ["./**/*.ts", "./**/*.tsx"],
      "exclude": ["**/node_modules", "**/dist"]
}
